{
  "title": "RLS Latency & Errors",
  "panels": [
    {
      "type": "graph",
      "title": "AuthZ Check Duration (p95)",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(rls_authz_check_duration_seconds_bucket[5m])) by (le))" }
      ]
    },
    {
      "type": "graph",
      "title": "Body Parse Errors",
      "targets": [
        { "expr": "rate(rls_body_parse_errors_total[5m])" }
      ]
    },
    {
      "type": "graph",
      "title": "Limits Stale Seconds",
      "targets": [
        { "expr": "rls_limits_stale_seconds" }
      ]
    }
  ]
}

